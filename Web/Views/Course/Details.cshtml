@model Web.Models.Course.CourseGetByIdViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@Model.Name</title>
    <link rel="stylesheet" href="~/css/details.css" />
</head>
<body>
<p align="left">
    <button onclick="navigateToIndex('Course')"><img src="~/Assets/Icons/back.svg" alt="Back to List"/>  Back to Courses</button>
</p>
<h2 align="center">@Model.Name Details</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">StartDate</dt>
        <dd class="col-sm-10">@Model.StartDate</dd>
        <dt class="col-sm-2">EducatorId</dt>
        <dd class="col-sm-10">@Model.EducatorId</dd>
    </dl>
</div>
<p align="center">
    <button onclick="navigateToEdit('Course', '@Model.Id')"><img src="~/Assets/Icons/edit.svg" alt="Edit"/>  Edit Course</button>
</p>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id"/>
    <p align="center"><button type="submit"><img src="~/Assets/Icons/delete.svg" alt="Delete"/>  Delete</button></p>
</form>
</body>
<script src="~/Scripts/navigate-to-index.js"></script>
<script src="~/Scripts/navigate-to-edit.js"></script>
<script src="~/Scripts/highlight.js"></script>
</html>
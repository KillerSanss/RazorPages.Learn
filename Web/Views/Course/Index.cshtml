@model IEnumerable<Web.Models.Course.CourseGetAllViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Courses</title>
    <link rel="stylesheet" href="~/css/index.css" />
</head>
<body>
<h2 align="center">Courses</h2>
<form asp-action="Index" method="get">
    <p align="right"><input type="text" name="searchString" value="@ViewBag.CurrentFilter" placeholder="Find course..." /></p>
</form>
<p align="right">
    <button onclick="navigateToCreate('Course')"><img src="~/Assets/Icons/create.svg" alt="Create New Course"/>  New Course</button>
</p>
<table>
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var course in Model)
    {
        <tr>
            <td onclick="navigateToDetails('Course', '@course.Id')">@course.Name</td>
            <td onclick="navigateToDetails('Course', '@course.Id')">@course.Description</td>
        </tr>
    }
    </tbody>
</table>
<div class="pagination">
    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
        <a asp-action="Index" asp-route-pageNumber="@i">@i</a>
    }
</div>
</body>
<script src="~/Scripts/highlight.js"></script>
<script src="~/Scripts/navigate-to-details.js"></script>
<script src="~/Scripts/navigate-to-create.js"></script>
<script src="~/Scripts/course-realtime-search.js"></script>
</html>

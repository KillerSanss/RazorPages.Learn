@model Web.Models.Educator.EducatorGetByIdViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@Model.FullName.FirstName @Model.FullName.Surname @Model.FullName.Patronymic</title>
    <link rel="stylesheet" href="~/css/details.css" />
</head>
<body>
<p align="left">
    <button onclick="navigateToIndex('Educator')"><img src="~/Assets/Icons/back.svg" alt="Back to List"/>  Back to Educators</button>
</p>
<h2 align="center">@Model.FullName.FirstName @Model.FullName.Surname @Model.FullName.Patronymic Details</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">FirstName</dt>
        <dd class="col-sm-10">@Model.FullName.FirstName</dd>
        <dt class="col-sm-2">Surname</dt>
        <dd class="col-sm-10">@Model.FullName.Surname</dd>
        <dt class="col-sm-2">Patronymic</dt>
        <dd class="col-sm-10">@Model.FullName.Patronymic</dd>
        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Gender</dd>
        <dt class="col-sm-2">BirthDate</dt>
        <dd class="col-sm-10">@Model.BirthDate</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
        <dt class="col-sm-2">WorkExperience</dt>
        <dd class="col-sm-10">@Model.WorkExperience</dd>
    </dl>
</div>
<p align="center">
    <button onclick="navigateToEdit('Educator', '@Model.Id')"><img src="~/Assets/Icons/edit.svg" alt="Edit"/>  Edit Educator</button>
    <button onclick="navigateToEducatorCourses('@Model.Id')"><img src="~/Assets/Icons/person.svg" alt="Educator Courses"/>  Educator Courses</button>
</p>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id"/>
    <p align="center"><button type="submit"><img src="~/Assets/Icons/delete.svg" alt="Delete"/>  Delete</button></p>
</form>
</body>
<script src="~/Scripts/navigate-to-index.js"></script>
<script src="~/Scripts/navigate-to-edit.js"></script>
<script src="~/Scripts/navigate-to-educator-courses.js"></script>
<script src="~/Scripts/highlight.js"></script>
</html>